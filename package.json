{
  "name": "tbls-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for tbls database schema information with SQL query support",
  "main": "dist/index.js",
  "bin": {
    "tbls-mcp-server": "./dist/index.js"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test jest --maxWorkers=75% --no-coverage",
    "test:watch": "jest --watch",
    "test:ci": "NODE_ENV=test NODE_OPTIONS='--max-old-space-size=4096' jest --ci --maxWorkers=2 --no-coverage --forceExit --detectOpenHandles",
    "test:coverage": "NODE_ENV=test jest --coverage --maxWorkers=75%",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write src tests",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "tbls",
    "database",
    "schema",
    "sql",
    "mysql",
    "sqlite"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "lru-cache": "^11.2.1",
    "mysql2": "^3.14.5",
    "neverthrow": "^8.2.0",
    "sqlite3": "^5.1.7",
    "zod": "^3.25.76"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.4.0",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
